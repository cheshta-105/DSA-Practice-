/* Rhombus pattern
 
 
    * * * *
   * * * *
  * * * *
 * * * * 


*/
#include<iostream>
using namespace std;

int main()
{
    int n;
     cin>>n;
     
     for(int i=1; i<=n; i++) // traverse thee rows  i is the row no
     {
         for(int j=1; j<=n-i; j++)
         {
            cout<<" ";
         }
         for(int j=1; j<=n; j++)
         {
            cout<<"*";
         }
         for(int j=1; j<i; j++)
         {
            cout<<" ";
         }
         
         cout<<endl;
     }
}
